<local:DebugControl x:Class="Elden_Ring_Debug_Tool.ParamViewerControl"
                    x:Name="DebugParam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Elden_Ring_Debug_Tool"
             mc:Ignorable="d" 
             Background="DarkGray" d:DesignHeight="475" d:DesignWidth="680">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save Param" HorizontalAlignment="Center" Width="100" Click="SaveButton_Click" Margin="0,15,0,0" IsEnabled="{Binding Hook.Loaded}"/>
                <Separator Visibility="Hidden" Width="20"/>
                <Button Content="Open Folder" HorizontalAlignment="Center" Width="100" Click="OpenButton_Click" Margin="0,15,0,0" IsEnabled="{Binding Hook.Loaded}"/>
                <Separator Visibility="Hidden" Width="20"/>
                <Button Content="Reset Param" HorizontalAlignment="Center" Width="100" Click="ReloadButton_Click" Margin="0,15,0,0" IsEnabled="{Binding Hook.Loaded}"/>
            </StackPanel>
            
            <ComboBox x:Name="ComboBoxParams" HorizontalAlignment="Center" Width="300" Margin="0,10,0,0" IsEnabled="{Binding ElementName=DebugParam, Path=Hook.Loaded}" DisplayMemberPath="Name" SelectionChanged="ComboBoxParams_SelectionChanged" HorizontalContentAlignment="Center"/>
            <Grid Width="300" Margin="0,10,0,0" Visibility="Hidden" >
                <TextBox x:Name="SearchBoxParams" HorizontalContentAlignment="Center" TextChanged="SearchBoxParam_TextChanged" IsEnabled="False"/>
                <TextBlock Margin="5,2" MinWidth="50" Text="Search Params Coming Soon..." HorizontalAlignment="Center"
                   Foreground="DarkGray"  Visibility="{Binding ElementName=SearchBoxParams, Path=Text.IsEmpty, Converter={StaticResource ResourceKey=boolToVisibilityConverter}}" IsHitTestVisible="False"/>
            </Grid>
        </StackPanel>

        <TextBox Grid.Row="1" Grid.Column="0" x:Name="SearchBoxRow" HorizontalContentAlignment="Center" TextChanged="SearchBoxRow_TextChanged" IsEnabled="{Binding ElementName=DebugParam, Path=Hook.Loaded}"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,2" MinWidth="50" Text="Search Rows..." HorizontalAlignment="Center"
                   Foreground="DarkGray" Visibility="{Binding ElementName=SearchBoxRow, Path=Text.IsEmpty, Converter={StaticResource ResourceKey=boolToVisibilityConverter}}" IsHitTestVisible="False"/>
        <CheckBox Grid.Row="1" Grid.Column="0"  x:Name="CbxIDSearch" Content="Search IDs" VerticalAlignment="Center" HorizontalAlignment="Left" Width="75"/>

        <TextBox Grid.Row="1" Grid.Column="1" x:Name="SearchBoxField" HorizontalContentAlignment="Center" TextChanged="SearchBoxField_TextChanged"  IsEnabled="{Binding ElementName=DebugParam, Path=Hook.Loaded}"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="5,2" MinWidth="50" Text="Search Fields..." HorizontalAlignment="Center"
                   Foreground="DarkGray" Visibility="{Binding ElementName=SearchBoxField, Path=Text.IsEmpty, Converter={StaticResource ResourceKey=boolToVisibilityConverter}}" IsHitTestVisible="False"/>
        <CheckBox Grid.Row="1" Grid.Column="1" x:Name="CbxValueSearch" Content="Search Values" VerticalAlignment="Center" HorizontalAlignment="Right" FlowDirection="RightToLeft" Width="95"/>
        
        <StackPanel Grid.Row="2" Grid.Column="0" >
                <ListBox x:Name="ListBoxRows" IsEnabled="{Binding ElementName=DebugParam, Path=Hook.Loaded}" BorderThickness="0" Height="{Binding ElementName=DebugParam, Path=ActualHeight}" SelectionChanged="ListBoxRows_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
            </StackPanel>
        <ScrollViewer  Grid.Row="2" Grid.Column="1" CanContentScroll="False" >
            <StackPanel x:Name="ParamPanel" CanVerticallyScroll="True" IsEnabled="{Binding ElementName=DebugParam, Path=Hook.Loaded}" />
        </ScrollViewer>
    </Grid>
</local:DebugControl>
